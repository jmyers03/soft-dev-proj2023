<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:rg="http://rotorgames.com"
              x:Class="GoalsApp.PasswordRecovery">
    <StackLayout BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Padding="20">
        <Label Text="Password Recovery" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,20"/>
        <Entry Placeholder="Email" Keyboard="Email" Margin="0,0,0,10"/>
        <Button Text="Send Recovery Email" BackgroundColor="{StaticResource Secondary}" TextColor="{StaticResource Primary}" Command="{Binding SendRecoveryEmailCommand}" HorizontalOptions="FillAndExpand"/>
        <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand" BackgroundColor="Transparent" TextColor="{StaticResource Secondary}" Margin="0,10,0,0"/>
    </StackLayout>
</rg:PopupPage>