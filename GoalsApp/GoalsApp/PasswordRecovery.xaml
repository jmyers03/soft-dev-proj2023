<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoalsApp.PasswordRecovery"
             BackgroundColor="White"
             Title="DreamCatcher">
    
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Padding="20">
        
        <Label Text="Password Recovery" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,20"/>
        
        <Entry Placeholder="Email" Keyboard="Email" Margin="0,0,0,10"/>
        
        <Button Text="Send Recovery Email" BackgroundColor="Navy" TextColor="White" Command="{Binding SendRecoveryEmailCommand}" HorizontalOptions="FillAndExpand"/>
        
        <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand" BackgroundColor="Navy" TextColor="White" Margin="0,10,0,0"/>
    
    </StackLayout>

</ContentPage>