<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GoalsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GoalsApp.Views;assembly=GoalsApp">

    <!--Gave these Flyout items the same route as the buttons-->
    <FlyoutItem Title="Sign Out" Route="LoginPage">
        <ShellContent Title="Login Page" ContentTemplate="{DataTemplate local:LoginPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Dashboard" Route="Dashboard">
        <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate local:Dashboard}" />
    </FlyoutItem>

    <FlyoutItem Title="Tasks" Route="TaskPage">
        <ShellContent Title="Tasks" ContentTemplate="{DataTemplate local:TaskPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Calendar" Route="CalendarPage">
        <ShellContent Title="Calendar Page" ContentTemplate="{DataTemplate local:CalendarPage}" />
    </FlyoutItem>

    <FlyoutItem Title="UI Experiments" Route="UIExperiments">
        <ShellContent Title="UI Experiments" ContentTemplate="{DataTemplate local:UIExperiments}" />
    </FlyoutItem>

</Shell>
